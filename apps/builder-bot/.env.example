# ── Telegram Bot ─────────────────────────────────────────
BOT_TOKEN=your_bot_token_from_botfather
BOT_USERNAME=YourBotName

# ── Public URL ───────────────────────────────────────────
LANDING_URL=https://tonagentplatform.online

# ── AI Backend ───────────────────────────────────────────
# Option A: CLIProxyAPIPlus (free via GitHub Copilot / AWS Kiro)
CLAUDE_BASE_URL=http://127.0.0.1:8317
ANTHROPIC_API_KEY=your-proxy-api-key

# Option B: Direct Anthropic API
# CLAUDE_BASE_URL=https://api.anthropic.com
# ANTHROPIC_API_KEY=sk-ant-...

CLAUDE_MODEL=claude-opus-4-6
CLAUDE_MAX_TOKENS=4000

# ── Database ─────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USER=ton_agent
DB_PASSWORD=changeme
DB_NAME=ton_agent_platform
DB_SSL=false

# ── Owner ────────────────────────────────────────────────
OWNER_ID=your_telegram_user_id

# ── Security ─────────────────────────────────────────────
SESSION_TIMEOUT_MINUTES=30
MAX_EXECUTION_TIME_MS=30000
ENABLE_SECURITY_SCAN=true

# ── TON Wallet ───────────────────────────────────────────
PLATFORM_WALLET_ADDRESS=your_ton_wallet_address

# ── API Server ───────────────────────────────────────────
API_PORT=3001
